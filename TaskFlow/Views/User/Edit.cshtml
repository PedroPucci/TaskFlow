@model TaskFlow.Domain.Entity.UserEntity

@{
    ViewData["Title"] = "Editar Usuário";
}

<h2>Editar Usuário</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" class="form-control" placeholder="Digite seu nome"
               data-val="true" data-val-required="O campo nome não pode estar vazio!"
               minlength="4" title="O campo nome não pode ter menos de 4 caracteres!" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" placeholder="Digite seu email"
               data-val="true"
               data-val-required="O campo email não pode estar vazio!"
               data-val-email="O campo email está no formato incorreto!" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password">Senha</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha"
               data-val="true" data-val-required="O campo senha não pode estar vazio!"
               minlength="4" pattern="^(?=.*\d)(?=.*[a-zA-Z]).{4,}$" title="O campo senha não pode ter menos de 4 caracteres e 2 números!" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsActive">Ativo</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}