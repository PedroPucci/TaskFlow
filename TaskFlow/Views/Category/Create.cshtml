@model TaskFlow.Domain.Entity.CategoryEntity

@{
    ViewData["Title"] = "Cadastro de Categoria";
}

<h2>Cadastro de Categoria</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name">Nome da Categoria</label>
        <input asp-for="Name" class="form-control" placeholder="Digite o nome da categoria"
               data-val="true" data-val-required="O campo Nome não pode estar vazio!"
               minlength="3" title="O nome da categoria deve ter pelo menos 3 caracteres!" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Cadastrar Categoria</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
