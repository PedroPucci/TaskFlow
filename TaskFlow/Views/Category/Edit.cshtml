@model TaskFlow.Domain.Entity.CategoryEntity

@{
    ViewData["Title"] = "Editar Categoria";
}

<h2>Editar Categoria</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" class="form-control" placeholder="Digite o nome da categoria"
               data-val="true" data-val-required="O campo nome não pode estar vazio!"
               minlength="3" title="O campo nome deve ter pelo menos 3 caracteres!" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Salvar Alterações</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
